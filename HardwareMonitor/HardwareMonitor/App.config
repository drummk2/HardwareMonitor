<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler,Log4net"/>
  </configSections>

  <log4net>
    <root>
      <level value="ALL" />
      <appender-ref ref="event" />
    </root>
    <appender name="event" type="log4net.Appender.EventLogAppender">
      <param name="ApplicationName" value="Hardware Monitoring Service" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%level] %logger - %message%newline" />
      </layout>
    </appender>
  </log4net>
  
  <startup>
      <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.2" />
  </startup>
  
  <appSettings>
    <add key="ServiceTimerDelayInterval" value="5000" />
  </appSettings>
</configuration>